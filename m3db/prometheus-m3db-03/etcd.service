[Unit]
Description=etcd cluster
Documentation=https://etcd.io

[Service]
Type=notify
Restart=always
RestartSec=5s
LimitNOFILE=40000
TimeoutStartSec=0
ExecStart=/usr/bin/etcd  --data-dir /data/etcd --name etcd3 --initial-advertise-peer-urls http://10.180.1.12:2380 \
  --listen-peer-urls http://10.180.1.12:2380 \
  --listen-client-urls http://10.180.1.12:2379,http://127.0.0.1:2379 \
  --advertise-client-urls http://10.180.1.12:2379 \
  --initial-cluster-token ems-etcd-cluster-01 \
  --initial-cluster etcd1=http://10.180.1.27:2380,etcd2=http://10.180.1.11:2380,etcd3=http://10.180.1.12:2380 \
  --initial-cluster-state new
[Install]
WantedBy=multi-user.target
